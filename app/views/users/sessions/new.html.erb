<section class="h-screen bg-slate-800">
	<div class="container h-full px-6 py-24">
		<div
      class="g-6 flex h-full flex-wrap items-center justify-center lg:justify-between">
      <!-- Left column container with background-->
      <div class="mb-12 md:mb-0 md:w-8/12 lg:w-6/12 sm:block hidden">
        <img
          src="https://tecdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="w-full"
          alt="Phone image" />
      </div>
			<div class="md:w-8/12 lg:ml-6 lg:w-5/12 flex flex-col justify-between h-3/4">
				<h1 class="text-4xl font-bold text-slate-200 hidden lg:block">LogIn to Messenger</h1>
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="flex flex-col space-y-4">
						
						<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'caret-slate-200 text-slate-200 block min-h-[auto] w-full rounded bg-transparent px-3', placeholder: 'Email address'%>
						<%= f.password_field :password, autocomplete: "current-password", class: 'caret-slate-200 text-slate-200 block min-h-[auto] w-full rounded bg-transparent px-3', placeholder: 'Password' %>

						<% if devise_mapping.rememberable? %>
							<div class="field items-center">
								<%= f.check_box :remember_me, class: 'w-4 h-4 text-blue-500 bg-slate-700 rounded border-slate-600 focus:ring-2 focus:ring-offset-slate-700'%>
								<%= f.label :remember_me, class: 'font-medium text-slate-200 text-sm' %>
							</div>
						<% end %>

						<div class="actions">
							<%= f.submit "Log in", class: 'text-slate-100 bg-blue-700 cursor-pointer px-4 py-2 rounded hover:bg-blue-600' %>
						</div>
					</div>
				<% end %>
			</div>

			<%= render "users/shared/links" %>
		</div>
	</div>
</section>
